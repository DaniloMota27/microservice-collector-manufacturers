{
  "name": "microservice-collector-manufacturers",
  "version": "1.0.0",
  "description": "This microservice is main service  of application, because it's collect data of partners",
  "author": "Danilo Mota and Luan Santos",
  "license": "GPL-3.0-or-later",
  "repository": "",
  "homepage": "git@github.com:DaniloMota27/microservice-collector.git",
  "scripts": {
    "start:dev": "sucrase-node src/main/config/server.ts",
    "docker:build": "docker build -t date-reference/node:1.0 .",
    "docker:startApp": "docker run -d  -p 5000:5000 --env MONGO_URL='mongodb://mongodb:27017/vehicles' --env SQS_URL='http://localhost:4566/000000000000/data-reference-queue' --name microservice-controller-date-reference --network network-microservice date-reference/node:1.0",
    "create:NetworkMongodb": "docker network create network-microservice",
    "create:LocalStack": "docker-compose up -d",
    "create:queueSqs": "aws sqs create-queue --queue-name data-reference-queue --endpoint-url=http://localhost:4566 --region us-east-1 --profile testelocal",
    "start:mongoLocal": "docker run -d  -p 27017:27017 --name mongodb --network network-microservice -v data-vol:/data/db mongo:latest",
    "start:prod": "ts-node ./app/dist/app.js",
    "build": "tsc",
    "start": "sucrase-node src/main/config/server.ts",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "build:watch": "rimraf dist && tsc -p tsconfig-build.json -w",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "check": "npm-check -s -u",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage --watchAll",
    "test:check": "jest --coverage --config=jest.config.js --maxWorkers 2",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@shelf/jest-mongodb": "^4.1.4",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@types/node-fetch": "^2.6.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "aws-sdk-mock": "^5.8.0",
    "coveralls": "3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "git-commit-msg-linter": "^3.2.8",
    "husky": "^7.0.2",
    "jest": "29.3.1",
    "lint-staged": "^11.1.2",
    "mongodb-memory-server": "^8.10.2",
    "sucrase": "^3.29.0",
    "supertest": "^6.1.6",
    "ts-jest": "^29.0.3",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "aws-sdk": "^2.1292.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "jest-worker": "^29.3.1",
    "mongodb": "^4.13.0",
    "node-fetch": "2.6.7",
    "nodemon": "^2.0.12",
    "sqs-consumer": "^6.2.0",
    "ts-node": "^10.9.1",
    "tslog": "4.4.3-0"
  },
  "engines": {
    "node": "19.3.0"
  }
}
